<% title_tag t("users.register_user") %>

<div class="row">
  <div class="col"></div>
  <div class="col-lg-6">
    <div class="card">
      <div class="card-header">邮箱注册</div>
      <div class="card-body">
        <%= form_for resource, as: resource_name, url: registration_path(resource_name), remote: true do |f| %>
        <div class="form-group">
          <%= f.text_field :login, class: "form-control input-lg", placeholder: t("users.login"), hint: t("users.suggest_using_twitter_id") %>
        </div>
        <div class="form-group">
          <%= f.text_field :email, type: :email, class: "form-control input-lg", placeholder: t("activerecord.attributes.user.email") %>
        </div>
        <div class="form-group form-check">
          <label for="user_email_public" class="form-check-label">
            <%= f.check_box :email_public, checked: true, class: "form-check-input" %> <%= t("activerecord.attributes.user.email_public") %>
          </label>
        </div>
        <div class="form-group">
        <%= f.password_field :password, class: "form-control input-lg", placeholder: t("activerecord.attributes.user.password") %>
        </div>
        <div class="form-group">
        <%= f.password_field :password_confirmation, class: "form-control input-lg", placeholder: t("activerecord.attributes.user.password_confirmation") %>
        </div>
        <div class="form-group">
          <div class="input-group">
            <%= rucaptcha_input_tag(class: 'form-control input-lg', placeholder: t('common.captcha')) %>
            <span class="input-group-addon input-group-captcha"><a class="rucaptcha-image-box" href="#"><%= rucaptcha_image_tag %></a></span>
          </div>
        </div>

        <div class="form-group">
          <%= f.submit t('users.submit_new_user'), class: "btn btn-lg btn-primary", 'data-disable-with' => t("common.submitting") %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-lg-4">
    <div class="card">
      <div class="card-header"><%= t("common.auth_with_other_services") %></div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <%= link_to raw("<i class='fa fa-mobile'></i> 手机"), sign_up_with_mobile_account_path, class: "btn btn-default btn-lg btn-block" %>
        </li>
        <li class="list-group-item">
          <%= link_to raw("<i class='fa fa-wechat'></i> 微信"), omniauth_authorize_path(:user, mobile? ? :wechat : :open_wechat), class: "btn btn-default btn-lg btn-block " + (mobile? ? '' : 'open-wechat') %>
        </li>
        <% if Setting.has_module? :github %>
        <li class="list-group-item">
          <%= link_to raw("<i class='fa fa-github'></i> GitHub"), omniauth_authorize_path(:user, :github), class: "btn btn-default btn-lg btn-block" %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
